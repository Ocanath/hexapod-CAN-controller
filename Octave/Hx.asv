function m = Hx(angle)

	m[0][0] = 1;	m[0][1] = 0;				m[0][2] = 0;				m[0][3] = 0;
	m[1][0] = 0;	m[1][1] = cos(angle);	m[1][2] = -sin_fast(angle);	m[1][3] = 0;
	m[2][0] = 0;	m[2][1] = sin_fast(angle);	m[2][2] = cos(angle);	m[2][3] = 0;
	m[3][0] = 0;	m[3][1] = 0;				m[3][2] = 0;				m[3][3] = 1;

end
